<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.CompartimentosFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">


        <TextView
            android:background="@color/colorAccent"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_cisterna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_cisterna"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:layout_weight="0.5"/>

        <TextView
            android:background="@color/colorAccent"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_cisternamatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R5484FSF"
            android:textSize="16dp"
            android:gravity="center_horizontal"
            android:layout_weight="0.5"/>


    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/tv_compartimentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:text="COMPARTIMENTOS"/>

    </LinearLayout>

        <ListView
            android:id="@+id/lv_compartimentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>
</FrameLayout>